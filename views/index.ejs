<body>
    <header>
        <p class="name">My To Do List</p>
        <div class="send-data">
            <input type="text" name="todoTitle" placeholder="Title...">
            <span>Add</span>
        </div>
    </header>
    <% for(let i =0; i < arrOftodos.length; i++){ %>
        <% if(arrOftodos[i].finished == "false"){ %>

            <div class="card to-finish">
                <p class="title">
                    <%= arrOftodos[i].todoTitle %>
                </p>
                <span class="delete">X</span>
            </div>
            <% }else{ %>
                <div class="card finished1">
                    <p class="title">
                        <%= arrOftodos[i].todoTitle %>
                    </p>
                    <span class="delete">X</span>
                </div>
                <% } %>
                    <% } %>
